<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/for_app"
        >
    <TextView
        android:id="@+id/dont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have account?"
        android:layout_marginTop="22sp"
        android:layout_marginEnd="120sp"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:textColor="#B9FFFFFF"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_marginTop="15sp"
        android:layout_alignParentRight="true"
        android:background="@drawable/formbutton"
        android:text="GetStarted"
        android:id="@+id/sign_up"
        />
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp"
        android:text="BlogMate"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:layout_marginBottom="50sp"
        />
    <RelativeLayout
        android:layout_width="380sp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/box2"
        android:layout_below="@id/app_name"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box"
        android:layout_below="@id/app_name"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/ex"
            android:layout_marginTop="4sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Enter your details here"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/welcome"
            android:textColor="#DA3A3939"
            />
        <EditText
            android:id="@+id/email_box"
            android:layout_marginTop="20sp"
            android:layout_width="300sp"
            android:layout_centerHorizontal="true"
            android:layout_height="60sp"
            android:background="@drawable/input_field"
            android:layout_below="@+id/ex"
            android:textSize="16sp"
            android:paddingBottom="10sp"
            android:gravity="bottom"
            android:hint="johnsmith@example.com"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ex"
            android:text="Email Address"
            android:layout_marginTop="25sp"
            android:layout_marginStart="68sp"
            android:textColor="#938C8C"
            />
        <EditText
            android:id="@+id/password_box"
            android:layout_marginTop="20sp"
            android:layout_width="300sp"
            android:layout_centerHorizontal="true"
            android:layout_height="60sp"
            android:inputType="textPassword"
            android:background="@drawable/input_field"
            android:layout_below="@+id/email_box"
            android:textSize="16sp"
            android:hint="Enter Your Password"
            android:paddingBottom="15sp"
            android:gravity="bottom"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_box"
            android:text="Password"
            android:layout_marginTop="25sp"
            android:layout_marginStart="68sp"
            android:textColor="#938C8C"
            />
        <ToggleButton
            android:layout_below="@+id/email_box"
            android:layout_marginStart="320sp"
            android:layout_marginTop="40sp"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/eye_selector"
            android:checked="false"
            android:id="@+id/passwordToggleButton"
            />

        <Button
            android:id="@+id/signin"
            android:layout_below="@+id/password_box"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38sp"
            android:background="@drawable/login_btn"
            android:text="Sign In"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/frgt_text"
            android:layout_below="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your password ?"
            android:textColor="#938C8C"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:textSize="16sp"
            android:textStyle="bold"
            />

    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>