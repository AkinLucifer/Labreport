<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="wrap_content"
        android:layout_height="800sp"
        android:background="@color/for_app"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20sp"
            android:background="@drawable/back_arrow"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/dont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:layout_marginTop="22sp"
            android:layout_marginEnd="120sp"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:textColor="#B9FFFFFF"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginTop="15sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/formbutton"
            android:text="GetStarted"
            android:id="@+id/sign_up"
            />
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90sp"
            android:text="BlogMate"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_marginBottom="50sp"
            />

        <RelativeLayout
            android:layout_width="396dp"
            android:layout_height="match_parent"
            android:layout_below="@id/app_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/box2" />


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/app_name"
            android:layout_marginTop="10sp"
            android:background="@drawable/box">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="Welcome Back"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="20sp"
                android:text="Enter your details here"
                android:textColor="#DA3A3939" />

            <EditText
                android:id="@+id/sign_email_box"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:layout_below="@+id/ex"
                android:layout_centerHorizontal="true"
                android:background="@drawable/input_field"
                android:gravity="bottom"
                android:inputType="textEmailAddress"
                android:hint="johnsmith@gmail.com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ex"
                android:layout_marginStart="65sp"
                android:layout_marginTop="8sp"
                android:text="Email Address"
                android:textColor="#938C8C"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/sign_username_box"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:layout_below="@+id/sign_email_box"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8sp"
                android:background="@drawable/input_field"
                android:gravity="bottom"
                android:hint="John Smith" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sign_email_box"
                android:layout_marginStart="65sp"
                android:layout_marginTop="10sp"
                android:text="Username"
                android:textColor="#938C8C"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/sign_contact_box"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:layout_below="@+id/sign_username_box"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8sp"
                android:background="@drawable/input_field"
                android:gravity="bottom"
                android:hint="123456789"
                android:maxLength="10"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sign_username_box"
                android:layout_marginStart="65sp"
                android:layout_marginTop="10sp"
                android:text="Contact"
                android:textColor="#938C8C"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/sign_date_box"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:layout_below="@+id/sign_contact_box"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8sp"
                android:background="@drawable/input_field"
                android:gravity="bottom"
                android:hint="Enter your Date"
                android:inputType="date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sign_contact_box"
                android:layout_marginStart="65sp"
                android:layout_marginTop="10sp"
                android:text="Date"
                android:textColor="#938C8C"
                android:textSize="12sp" />

            <Button
                android:id="@+id/calendar"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_below="@+id/sign_contact_box"
                android:layout_marginStart="320sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/calendar"
                android:checked="false"
                />

            <EditText
                android:id="@+id/sign_password_box"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:layout_below="@+id/sign_date_box"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8sp"
                android:background="@drawable/input_field"
                android:gravity="bottom"
                android:hint="Enter your Password"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sign_date_box"
                android:layout_marginStart="65sp"
                android:layout_marginTop="10sp"
                android:text="Password"
                android:textColor="#938C8C"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/passwordToggleButton"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_below="@+id/sign_date_box"
                android:layout_marginStart="320sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/eye_selector"
                android:checked="false"
                android:textOff=""
                android:textOn="" />

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_password_box"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:background="@drawable/login_btn"
                android:text="Sign Up"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>